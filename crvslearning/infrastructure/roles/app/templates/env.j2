# Configuration Django
DEBUG=False
SECRET_KEY={{ secret_key }}
ALLOWED_HOSTS={{ domain }}

# Base de données
DATABASE_URL=postgres://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port }}/{{ db_name }}

# Redis
REDIS_URL=redis://redis:6379/0

# Jitsi
MEETING_BASE_URL={{ meeting_base_url | default('https://meet.jit.si') }}

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST={{ email_host | default('smtp.gmail.com') }}
EMAIL_PORT={{ email_port | default('587') }}
EMAIL_USE_TLS={{ email_use_tls | default('True') }}
EMAIL_HOST_USER={{ email_host_user | default('') }}
EMAIL_HOST_PASSWORD={{ email_host_password | default('') }}
DEFAULT_FROM_EMAIL={{ default_from_email | default('webmaster@localhost') }}

# Sécurité
CSRF_TRUSTED_ORIGINS=https://{{ domain }}
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
SECURE_CONTENT_TYPE_NOSNIFF=True

# Fichiers statiques et médias
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media
